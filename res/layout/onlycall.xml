<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right" >

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnOcculPanel"
                    android:layout_width="60dip"
                    android:layout_height="221dp"
                    android:background="@drawable/occult_menu_out"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button_terminate_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="left|bottom"
                    android:background="@drawable/ic_jog_dial_end_call" />

                <ToggleButton
                    android:id="@+id/button_camera"
                    android:layout_width="60dip"
                    android:layout_height="50dip"
                    android:background="@drawable/camera"
                    android:padding="10dp"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/button_headset"
                    android:layout_width="60dip"
                    android:layout_height="50dip"
                    android:background="@drawable/headset_button"
                    android:padding="10dp"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/button_mute"
                    android:layout_width="60dip"
                    android:layout_height="50dip"
                    android:background="@drawable/mute_button"
                    android:padding="10dp"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/info_not_video"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:text="Video Not Negociated"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_below="@id/info_not_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="100dip"
            android:src="@drawable/microphone_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_bandwidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="------" />

</FrameLayout>