<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/FrameLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ImageView android:id="@+id/image_call" android:src="@drawable/image_call"
		android:layout_height="fill_parent" android:scaleType="center"
		android:layout_width="match_parent" />
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="match_parent"
		android:layout_height="match_parent" android:layout_gravity="center_horizontal|top">
		<TextView android:text="@string/incoming_call" android:id="@+id/incoming_call"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginBottom="20dip" android:layout_gravity="center_horizontal|top"
			android:padding="10dip" android:textColor="#FFFFFF"
			android:textStyle="bold" android:textSize="25px" android:background="#00000000" />

		<TextView android:text="@string/incoming_sip" android:id="@+id/incoming_sip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginBottom="20dip" android:padding="10dip"
			android:textColor="#FFFFFF" android:textStyle="bold"
			android:textSize="25px" android:background="#00000000"
			android:layout_gravity="top|center_horizontal" />
	</LinearLayout>
	<Button android:id="@+id/button_call_accept"
		android:layout_width="wrap_content" android:background="@drawable/ic_jog_dial_answer"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:layout_gravity="left|center_horizontal|bottom" />

	<Button android:id="@+id/button_call_reject" android:background="@drawable/ic_jog_dial_decline"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_gravity="right|center_horizontal|bottom" />

</FrameLayout>
