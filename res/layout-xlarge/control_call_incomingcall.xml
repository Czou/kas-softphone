<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/incoming_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginBottom="10dp"
            android:background="#00000000"
            android:padding="10dip"
            android:text="@string/incoming_call"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/incoming_sip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="#00000000"
            android:padding="10dp"
            android:text="@string/incoming_sip"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_call"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/image_call" />

    <ImageButton
        android:id="@+id/button_call_accept"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/ic_jog_dial_answer" />

    <ImageButton
        android:id="@+id/button_call_reject"
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_marginLeft="550dp"
        android:layout_marginTop="-207dp"
        android:background="@drawable/ic_jog_dial_decline" />

</LinearLayout>