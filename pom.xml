<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.tikal.android</groupId>
  <artifactId>tk-android-softphone</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>apk</packaging>

  <name>SoftPhone</name>
  <description>TODO: Add description here</description>
  <url>http://193.147.51.37/site/tk-android-softphone</url>

  <dependencies>
    <dependency>
      <groupId>com.tikal.media</groupId>
      <artifactId>tk-mediaspec</artifactId>
      <version>1.0.0-SNAPSHOT</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.tikal.android</groupId>
      <artifactId>tk-android-media</artifactId>
      <version>0.0.1-SNAPSHOT</version>
      <type>apklib</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.tikal</groupId>
      <artifactId>tk-android-sipua</artifactId>
      <version>1.0.0-SNAPSHOT</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.google.android</groupId>
      <artifactId>android</artifactId>
      <version>2.3.3</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax.sip</groupId>
      <artifactId>jain-sip-ri</artifactId>
      <version>1.2</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>android2.2</id>
      <dependencies>
        <dependency>
          <groupId>log4j</groupId>
          <artifactId>log4j</artifactId>
          <version>[1.2.16,)</version>
          <scope>compile</scope>
        </dependency>
      </dependencies>
      <build>
        <finalName>${project.artifactId}-android2.2-${version}</finalName>
      </build>
    </profile>
  </profiles>

  <build>
    <finalName>${project.artifactId}-${version}</finalName>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <groupId>com.jayway.maven.plugins.android.generation2</groupId>
        <artifactId>maven-android-plugin</artifactId>
        <version>3.0.0-alpha-2</version>
        <configuration>
          <sdk>
            <platform>10</platform>
          </sdk>
          <undeployBeforeDeploy>true</undeployBeforeDeploy>
        </configuration>
        <extensions>true</extensions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
				<source>1.6</source>
				<target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <distributionManagement>
    <site>
      <id>maven-site</id>
      <url>scp://193.147.51.37/var/www/site/tk-android-softphone/${project.version}</url>
    </site>
  </distributionManagement>
</project>
